<body>
	<section>   
		
        <div class="affichage_resultat">  
			
			<h2>Dictionnaire Japonais/Francais </h2>
			<table>
				<caption>Resultat de la recherche </caption>	
				<tr>
					<th>Kana</th>
					<th>Kanji</th>
					<th>Fran√ßais</th>
				</tr>

				<!-- Boucle pour lire le tableau -->
				<% for(i=0; i<result.length; i++) { %>
						 <td width=20% align=center ><%= result[i].kana %></td>
						 <td width=25% align=center ><%= result[i].kanji %></td>
						 <td><%= result[i].francais %></td> 
					  </tr>  
				<% } %>
			</table> 
		</div>
	</section>
</body>
</html>