<body>
	<h1>Le dictionnaire des Kanjis</h1>

    <section>
	<div class="formulaire_recherche">
		
	    <h2>Recherche Kanji dans la base de données</h2>

			<form action="/API/rechercheKanji3" method="post">

			<div class="class_Label">

				<label for="kanjiindex">Index   </label>
				<label for="niveau">&nbsp;&emsp;&emsp;&emsp;Niveau</label>
				<label for="kanji">&emsp;Kanji</label>
				<label for="onyomi">&nbsp;&nbsp;&nbsp;&emsp;Lecture Onyomi  </label>
				<label for="kunyomi">&emsp;&emsp;&emsp;&emsp;&nbsp;Lecture Kunyomi</label>
				<label for="traduction">&nbsp;&emsp;&emsp;&emsp;Traduction Française</label>

			</div>

			<div class="class_input">

				<input type="text" id="kanjiindex" name="kanjiindex" placeholder="" size="4">

				<select name="Niveau" id="Niveau" >
					<option value="" > </option>
					<option value="N5">N5</option>
					<option value="N4">N4</option>
					<option value="N3">N3</option>
					<option value="N2">N2</option>
					<option value="N1">N1</option>
				</select>
				
				<input type="text" id="kanji" name="kanji" placeholder=""  size="3" >
			
				<input type="text" id="onyomi" name="onyomi"  placeholder=""  size="14">

				<input type="text" id="kunyomi" name="kunyomi" placeholder=""  size="14">

				<input type="text" id="traduction" name="traduction" placeholder="" size="20" >
			</div>
			
			<div>
				<!-- <button onclick="fonctStorageSetKanji()" >stocker la recherche</button> -->
				<button type="submit", onclick="fonctStorageSetKanji()" >lancer la recherche</button>
			</div>
	
	    </form>
	</div>
	
	</section>
</body>
